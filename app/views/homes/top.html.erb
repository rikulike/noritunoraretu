<div class= "container">
  <div><%= flash[:notice] %></div>
  <% if young_user_signed_in? %>
    <div class= "row">
      <div class= "col-8 offset-2 mt-4">
        <div class= "row">
          <div class= "col-8 offset-2">
            <row>
              <%= link_to "My page", young_user_path(current_young_user), class: "text-light btn btn-warning btn-sm btn-block md-3" %>
            </row>
            <row>
              <%= link_to "ログアウト", destroy_young_user_session_path, method: :delete, class: "text-light btn btn-success btn-sm btn-block" %>
            </row>
          </div>
        </div>
      </div>
    </div>
  <% elsif senior_user_signed_in? %>
    <div class= "row">
      <div class= "col-8 offset-2 mt-4">
        <div class= "row">
          <div class= "col-8 offset-2">
            <row>
              <%= link_to "My page", senior_senior_user_path(current_senior_user), class: "text-light btn btn-warning btn-sm btn-block md-3" %>
            </row>
            <row>
              <%= link_to "ログアウト", destroy_senior_user_session_path, method: :delete, class: "text-light btn btn-success btn-sm btn-block" %>
            </row>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class= "row">
      <h2>ヤングユーザー</h2>
    </div>
    <div class= "row">
      <div class= "mx-auto col-11 col-sm-10 col-lg-8 col-xl-6 mt-4">
        <div class= "btn-wrapper col-10 mx-auto">
          <div class= "row">
            <%= link_to new_young_user_registration_path, class: "text-light btn btn-warning btn-sm btn-block md-3 sign_up" do  %>
              新規登録
            <% end %>
          </div>
          <div class= "row">
            <%= link_to new_young_user_session_path, class: "text-light btn btn-success btn-sm btn-block sign_in" do %>
              ログイン
            <% end %>
          </div>
          <div class= "row">
            <%= link_to  young_users_guest_sign_in_path, method: :post, class:"text-light btn btn-danger btn-sm btn-block guest_sign_in" do  %>
              ゲストログイン
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class= "row">
      <h2>シニアユーザー</h2>
    </div>
    <div class= "row">
      <div class= "mx-auto col-11 col-sm-10 col-lg-8 col-xl-6 mt-4">
        <div class= "btn-wrapper col-10 mx-auto">
          <div class= "row">
            <%= link_to new_senior_user_registration_path, class: "text-light btn btn-warning btn-sm btn-block md-3 sign_up" do  %>
              新規登録
            <% end %>
          </div>
          <div class= "row">
            <%= link_to new_senior_user_session_path, class: "text-light btn btn-success btn-sm btn-block sign_in" do %>
              ログイン
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>



