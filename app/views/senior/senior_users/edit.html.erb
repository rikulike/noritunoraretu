<% if @senior_user.errors.any? %>
  <%= @senior_user.errors.count %>件のエラーが発生しました
  <ul>
    <% @senior_user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class= "container">
  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h2>プロフィール編集</h2>
      <%= form_with model: @senior_user, url: senior_senior_user_path(@senior_user), method: :patch  do |f| %>
        <div class= "form-group">
          <label for= "profile_image">プロフィール画像</label>
          <div>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
          <label for= "senior_user_name">名前</label>
          <div>
            <%= f.text_field :name %>
          </div>
          <label for= "senior_user_introduction">自己紹介</label>
          <div>
            <%= f.text_area :introduction %>
          </div>
        </div>
        <div>
          <%= f.submit "変更を保存", class: "btn btn-success form-group" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


