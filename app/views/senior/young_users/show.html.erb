<div class= "container">
  <div class= "row">
    <div class= "card col-6 offset-3 mt-4">
      <div class= "row">
        <div class= "col-12 text-center">
          <%= image_tag @young_user.get_profile_image(500,500),class: "young_user_index_profile_image rounded-circle  mt-3" %>
        </div>
      </div>
      <div class="card-body ">
        <h5 class="card-title text-center">
          <%= @young_user.name %>
        </h5>
        <p class="card-text young_user_index_introduction"><%= simple_format(@young_user.introduction, sanitize: true) %></p>
      </div>
    </div>
  </div>
  <div class= "row">
    <div class= "col-6 offset-3 mt-2">
      <%= link_to "もどる", :back %>
    </div>
  </div>
</div>
