<% if @young_user.errors.any? %>
  <%= @young_user.errors.count %>件のエラーが発生しました
  <ul>
    <% @young_user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>プロフィール編集</h2>
<%= form_with model: @young_user do |f| %>

<%= f.file_field :profile_image, accept: "image/*" %>

  <h4>名前</h4>
  <%= f.text_field :name %>

  <h4>自己紹介</h4>
  <%= f.text_area :introduction %>

  <%= f.submit "変更を保存" %>
<% end %>

<%= link_to '退会', young_user_path(@young_user.id), method: :delete, data: { confirm: '本当に退会しますか？'} %>