<% if @young_user.errors.any? %>
  <%= @young_user.errors.count %>件のエラーが発生しました
  <ul>
    <% @young_user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class= "container">
  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h2>プロフィール編集</h2>
      <%= form_with model: @young_user do |f| %>
      <div class= "form-group">
        <label for= "profile_image">プロフィール画像</label>
        <div>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <label for= "young_user_name">名前</label>
        <div>
          <%= f.text_field :name %>
        </div>
        <label for= "younv_user_introduction">自己紹介</label>
        <div>
          <%= f.text_area :introduction %>
        </div>
      </div>
      <div>
        <%= f.submit "変更を保存", class: "btn btn-success form-group" %>　<%= link_to '退会', young_user_path(@young_user.id), method: :delete, data: { confirm: '本当に退会しますか？'} %>
      </div>
      <% end %>
    </div>
  </div>
</div>


  

  

