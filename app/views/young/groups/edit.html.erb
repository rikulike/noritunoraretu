<div class= "container">
  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <% if @group.errors.any? %>
        <%= @group.errors.count %>件のエラーが発生しました
          <ul>
            <% @group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
    </div>
  </div>
  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h2>グループ編集画面</h2>
      <%= form_with model: @group, url: young_group_path, method: :patch  do |f| %>
        <div class= "form-group">
          <label for= "group_image">グループイメージ</label>
          <div>
            <%= f.file_field:group_image, accept: "image/*" %>
          </div>
          <label for= "group_name">グループ名</label>
          <div>
            <%= f.text_field :name %>
          </div>
          <label for= "group_introduction">グループ説明</label>
          <div>
             <%= f.text_area :introduction %>
          </div>
        </div>
        <div>
          <%= f.submit "変更を保存", class: "btn btn-success form-group" %>
          <%= link_to "削除", young_group_path(@group), method: :delete, data: {confirm: "本当に削除しますか"}%>
        </div>
      <% end %>
      <div>
        <%= link_to "グループ一覧へ", young_groups_path %>
      </div>
    </div>
  </div>
</div>