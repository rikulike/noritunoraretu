<h1>グループ編集画面</h1>

<%= form_with model: @group, url: young_group_path, method: :patch  do |f| %>
  <%= f.file_field:group_image, accept: "image/*" %>
  
  <h4>グループ名</h4>
  <%= f.text_area :name %>
  <h4>グループ説明</h4>
  <%= f.text_field :introduction %>
  
  <%= f.submit "変更を保存" %>
  <%= link_to "削除", young_group_path(@group), method: :delete %>
<% end %>