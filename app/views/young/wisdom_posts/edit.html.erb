<% if @wisdom_post.errors.any? %>
  <%= @wisdom_post.errors.count %>件のエラーが発生しました
  <ul>
    <% @wisdom_post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>編集画面</h1>

<%= form_with model: @wisdom_post do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '変更を保存' %>


  <%= link_to "削除", wisdom_post_path(@wisdom_post), method: :delete %>

<% end %>